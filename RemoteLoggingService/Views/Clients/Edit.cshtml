@model RemoteLoggingService.Models.Client
 
@{
    ViewData["Title"] = "Edit Client";
    Layout = "~/Views/Shared/_Layout.cshtml";
    // Create Develpoperslist
    var develpopersList = new List<SelectListItem>();
    if (ViewBag.Developers != null)
    {
        foreach(var developer in ViewBag.Developers)
        {
            develpopersList.Add(new SelectListItem() { Text = developer.Name.ToString(),Value = developer.UserId });
        }

    }
}

<h2>Edit</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (@Html.BeginForm("Edit", "Clients", FormMethod.Post))
        {
            
            @Html.HiddenFor(model => model.ClientId)
             
            <div class="editor-field">
                @Html.Label("Client")
                @Html.DisplayFor(model => model.User.Name)
            </div>

            <div class="editor-field">
                @Html.LabelFor(model => model.Developer)
                @Html.DropDownListFor(model => model.DeveloperId, develpopersList)
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        }
    </div>
</div>

<div>
    @Html.ActionLink("Back to list", "Index", "Clients")
</div>

